<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.views.HomeFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="16dp">

        <FrameLayout
            android:background="@drawable/test_image"
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="300dp">


            <TextView
                android:id="@+id/nameOfMeal"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@drawable/roundedbackground"
                android:fontFamily="@font/poppins"
                android:padding="10dp"
                android:layout_gravity="top"
                android:text="@string/name_of_meal"
                android:textColor="@color/darkGreen"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/cookNow"
                android:layout_gravity="bottom"
                android:layout_marginStart="220dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/poppins"
                android:textColor="@color/darkGreen"
                android:background="@drawable/roundedbackground"
                android:textSize="18sp"
                android:text="@string/cook_now"
                android:textStyle="bold" />

            <!-- Favorite Icon -->
            <ImageView
                android:layout_gravity="bottom"
                android:layout_marginStart="335dp"
                android:id="@+id/favIcon"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/star_off" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>