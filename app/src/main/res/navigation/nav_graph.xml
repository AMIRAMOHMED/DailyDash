<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navHome">

    <fragment
        android:id="@+id/navHome"
        android:name="com.example.dailydash.home.views.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailsMeals"
            app:destination="@id/detailsMeals" />
    </fragment>
    <fragment
        android:id="@+id/navCalendar"
        android:name="com.example.dailydash.home.views.fragments.CalendarFragment"
        android:label="fragment_calendar"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/navSearch"
        android:name="com.example.dailydash.home.views.fragments.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_navSearch_to_mealsFragment"
            app:destination="@id/mealsFragment" />
    </fragment>
    <fragment
        android:id="@+id/navProfile"
        android:name="com.example.dailydash.home.views.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/detailsMeals"
        android:name="com.example.dailydash.home.views.fragments.DetailsMeals"
        android:label="fragment_details_meals"
        tools:layout="@layout/fragment_details_meals" >
        <argument
            android:name="meal"
            app:argType="com.example.dailydash.home.data.models.Meals" />
    </fragment>
    <fragment
        android:id="@+id/mealsFragment"
        android:name="com.example.dailydash.home.views.fragments.MealsFragment"
        android:label="fragment_meals"
        tools:layout="@layout/fragment_meals">

        <argument
            android:name="choosensearch"
            app:argType="string" />
        <argument
            android:name="specifiedType"
            app:argType="string" />
    </fragment>
</navigation>